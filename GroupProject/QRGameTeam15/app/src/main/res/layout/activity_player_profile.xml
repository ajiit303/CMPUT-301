<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerProfile">


    <Button
        android:id="@+id/generate_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Login"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/generate_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/generate_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Profile Link"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/user_qrcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/generate_login"
        app:layout_constraintVertical_bias="0.043" />

    <ImageView
        android:id="@+id/user_qrcode"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="@id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/generate_profile"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_qrcode"/>
</androidx.constraintlayout.widget.ConstraintLayout>