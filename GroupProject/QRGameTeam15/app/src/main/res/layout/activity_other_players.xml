<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherPlayers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/OtherPlayerHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Players"
            android:textSize="34sp" />

        <ListView
            android:id="@+id/otherPlayerListview"
            android:layout_width="match_parent"
            android:layout_height="500dp" >

        </ListView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchPlayerEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="search"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/searchConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ok"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/scan_player_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Player Code"
        android:layout_gravity="center"
        android:textSize="20dp" />

</LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>